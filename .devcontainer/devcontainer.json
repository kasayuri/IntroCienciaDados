// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "data-science",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--name", "vsc-${localWorkspaceFolderBasename}"
    ],
    //"dockerComposeFile": "../docker-compose.yml",
    "workspaceMount": "source=.,target=/app,type=bind,consistency=cached",
    "workspaceFolder": "/app",
    "mounts":[
        "source=./Arquivos,target=/app/Arquivos,type=bind,consistency=cached"
    ],
    //"image": "mcr.microsoft.com/devcontainers/python:1-3-bookworm",
    //"postCreateCommand": "bash .devcontainer/post-create.sh",
    //"remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "almenon.arepl",
                "njpwerner.autodocstring",
                "JannisX11.batch-rename-extension",
                "phplasma.csv-to-table",
                "ms-azuretools.vscode-docker",
                "EditorConfig.EditorConfig",
                "mhutchie.git-graph",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-powertoys",
                "ms-toolsai.jupyter-hub",
                "github.copilot",
                "github.copilot-chat",
                "christian-kohler.path-intellisense",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "ms-python.autopep8"
            ]
        }
    }
}